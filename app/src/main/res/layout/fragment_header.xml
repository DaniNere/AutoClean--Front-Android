<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shared.headerFragment">

    <FrameLayout
        android:id="@+id/header_box"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/gradiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">


        <ImageView
            android:id="@+id/image_frame"
            android:layout_width="140dp"
            android:layout_height="143dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/frame_2" />


        <TextView
            android:layout_width="116dp"
            android:layout_height="47dp"
            android:layout_gravity="start"
            android:layout_marginStart="147dp"
            android:layout_marginHorizontal="125dp"
            android:layout_marginTop="145dp"
            android:fontFamily="@font/kodchasan_bold"
            android:text="AUTO"
            android:textColor="@color/primary_variant2"
            android:textSize="36sp" />


        <TextView
            android:layout_width="130dp"
            android:layout_height="47dp"
            android:layout_gravity="start"
            android:layout_marginStart="136dp"
            android:layout_marginTop="178dp"
            android:fontFamily="@font/kodchasan_regular"
            android:text="CLEAN"
            android:textColor="@color/primary_variant2"
            android:textSize="36sp" />


        <TextView
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="240dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter"
            android:text="Seu carro limpo, sem sair de casa!"
            android:textColor="@color/secondary_variant"
            android:textSize="16sp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
