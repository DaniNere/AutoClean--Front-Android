<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.profile.ProfileFragment">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/include6"
            layout="@layout/fragment_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="270dp"
            android:background="@drawable/rounded_top_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="272dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter"
                android:text="@string/choose_profile"
                android:textColor="@color/primary_variant2"
                android:textSize="32dp" />

            <LinearLayout
                android:layout_width="272dp"
                android:layout_height="137dp"
                android:layout_gravity="center"
                android:layout_marginTop="44dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_client"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="@string/btn_client"
                    android:textColor="@color/primary_variant2"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/user"
                    app:iconGravity="top"
                    app:iconSize="73dp"
                    app:iconTint="@color/primary_variant2"
                    app:strokeColor="@color/secondary_variant"
                    app:strokeWidth="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="272dp"
                android:layout_height="137dp"
                android:layout_gravity="center"
                android:layout_marginTop="44dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_profissional"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="@string/btn_profissional"
                    android:textColor="@color/primary_variant2"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/car_wash"
                    app:iconGravity="top"
                    app:iconSize="73dp"
                    app:iconTint="@color/primary_variant2"
                    app:strokeColor="@color/secondary_variant"
                    app:strokeWidth="2dp" />
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
