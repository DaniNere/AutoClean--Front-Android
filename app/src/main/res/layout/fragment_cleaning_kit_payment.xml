<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.CleaningKitPaymentFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/include6"
            layout="@layout/fragment_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="270dp"
            android:background="@drawable/rounded_top_border"
            android:orientation="vertical"
            android:paddingBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formas de pagamento"
            android:fontFamily="@font/inter"
            android:textColor="@color/primary_variant2"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_marginTop="28dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="358dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="81sp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:contentPadding="16sp"
                    app:cardBackgroundColor="@color/neutral_medium"
                    app:cardUseCompatPadding="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">


                        <ImageView
                            android:src="@drawable/card_payment"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cartão de Crédito"
                            android:textColor="@color/primary_variant2"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:src="@drawable/arrow_left"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="358dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="32sp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:contentPadding="16sp"
                app:cardBackgroundColor="@color/neutral_medium"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">


                    <ImageView
                        android:src="@drawable/pix"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pix"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textSize="14sp"
                        android:textColor="@color/primary_variant2"
                        android:textStyle="bold"/>

                    <ImageView
                        android:src="@drawable/arrow_left"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>