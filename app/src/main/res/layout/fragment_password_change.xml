<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.forgot.PasswordChangeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/include6"
            layout="@layout/fragment_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="270dp"
            android:background="@drawable/rounded_top_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="43dp"
                android:fontFamily="@font/inter"
                android:text="Crie sua senha"
                android:textAlignment="center"
                android:textColor="@color/primary_variant2"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="385dp">

            <EditText
                android:id="@+id/editTextSenha"
                style="@style/PrimaryEditText"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_marginTop="19dp"
                android:layout_gravity="center_horizontal"
                android:hint="Senha"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextConfirmar"
                style="@style/PrimaryEditText"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_marginTop="19dp"
                android:layout_gravity="center_horizontal"
                android:hint="Repetir Senha"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="538dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sua senha deve:"
                android:textColor="@color/secondary_variant"
                android:textStyle="bold"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="564dp"
            android:layout_marginStart="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ter no mínimo 6 caracteres"
                android:textColor="@color/secondary_variant"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ter no mínimo 1 letra maiúscula"
            android:textColor="@color/secondary_variant"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ter no mínimo 1 letra minúscula"
                android:textColor="@color/secondary_variant"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ter no mínimo1 caractere especial ex: @#"
                android:textColor="@color/secondary_variant"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ter no mínimo 1 número"
            android:textColor="@color/secondary_variant"
            />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_senha"
            style="@style/PrimaryButton"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:text="ALTERAR SENHA"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="695dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>