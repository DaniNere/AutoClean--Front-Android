<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    tools:context=".ui.SplashFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="199dp"
            android:layout_height="189dp"
            android:layout_marginStart="109dp"
            android:layout_marginTop="230dp"
            android:src="@drawable/frame_2"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="115dp" />

        <TextView
            android:id="@+id/text_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="382dp"
            android:fontFamily="@font/kodchasan_bold"
            android:text="AUTO"
            android:textColor="@color/primary_variant2"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/text_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="435dp"
            android:fontFamily="@font/kodchasan_regular"
            android:text="CLEAN"
            android:textColor="@color/primary_variant2"
            android:textSize="48sp" />

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
