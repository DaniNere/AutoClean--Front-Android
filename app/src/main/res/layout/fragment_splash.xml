<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/gradiente"
    tools:context=".ui.SplashFragment">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="189dp"
        android:layout_height="189dp"
        android:layout_marginTop="228dp"
        android:src="@drawable/frame_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_margin="101dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="288dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kodchasan_bold"
        android:text="AUTO"
        android:textColor="@color/primary_variant2"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="600dp"
        app:layout_constraintTop_toTopOf="@+id/logo_image"
        app:layout_constraintVertical_bias="0.34" />

    <TextView
        android:id="@+id/text_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kodchasan_regular"
        android:text="CLEAN"
        android:textColor="@color/primary_variant2"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toTopOf="@+id/logo_image"
        app:layout_constraintVertical_bias="0.448" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
