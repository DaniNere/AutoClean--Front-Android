<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Principal -->
    <style name="Theme.AutoClean" parent="Theme.Material3.Light.NoActionBar">

        <!-- BackGround -->
       <!-- <item name="android:windowBackground">@drawable/gradiente</item> -->

        <!-- Cor Primária -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorPrimaryVariant2">@color/primary_variant2</item>

        <!-- Cor Secundária -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorSecondaryVariant2">@color/secondary_variant2</item>

        <!-- Cor Terciária -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorTertiaryVariant">@color/tertiary_light</item>
        <item name="colorTertiaryAccent">@color/tertiary_accent</item>
        <item name="colorTertiaryNeutral">@color/tertiary_neutral</item>
        <item name="colorTertiaryPastel">@color/tertiary_pastel</item>
        <item name="colorTertiaryPastelLight">@color/tertiary_pastel_light</item>

        <!-- Fundo e Superfície -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/neutral_medium</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Cores de Erro e Sucesso -->
        <item name="colorError">@color/error</item>
        <item name="colorSuccess">@color/success</item>
        <item name="colorOnError">@color/white</item>

        <!-- Personalização do Texto -->
        <item name="android:textColorPrimary">@color/neutral_medium</item>
        <item name="android:textColorSecondary">@color/neutral_dark</item>
    </style>
</resources>
