<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">@color/primary_variant2</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">31dp</item>
        <item name="android:alpha">1.0</item>
    </style>

    <style name="SecondButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">147dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary_variant2</item>
        <item name="cornerRadius">31dp</item>
        <item name="android:alpha">1.0</item>
        <item name="android:strokeColor">@color/primary_variant2</item>
        <item name="android:strokeWidth">2</item>
    </style>


    <style name="UniformButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="backgroundTint">@color/neutral_medium</item>
        <item name="android:textColor">@color/primary_variant2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/primary_variant2</item>
        <item name="android:alpha">1.0</item>
    </style>

    <style name="TransparentButton">
        <item name="android:background">@drawable/transparent_with_border</item>
        <item name="android:layout_width">344dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textColor">@color/primary_variant2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableEnd">@drawable/arrow_next_small</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

</resources>